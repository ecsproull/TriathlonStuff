@model CreateUserViewModel

<form asp-action="CreateUser" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" style="margin-left:26px;"> </label>
        <input asp-for="Name" class="text-box-wide" />
    </div>
    <div class="form-group">
        <label asp-for="Email" style="margin-left:26px;"> </label>
        <input asp-for="Email" class="text-box-wide" />
    </div>
    <div class="form-group">
        <label asp-for="Password"> </label>
        <input asp-for="Password" class="text-box-wide" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" style="margin-left:5px;"> </label>
        <input asp-for="ConfirmPassword" class="text-box-wide" type="password" />
    </div>
    @if (Model.AllowRoleSelection)
    {
        <div>
            <table class="roleTable" style="margin-bottom:25px; border-color:#808080;">
                @for (int i = 0; i < Model.RoleNames.Count; i++)
                {
                    @Html.HiddenFor(m => m.RoleNames[i])
                    <tr>
                        <td>@Html.LabelFor(m => m.SelectedRoles[i], Model.RoleNames[i])</td>
                        <td style="width:30px;">@Html.CheckBoxFor(m => m.SelectedRoles[i], new { @class = "checkbox-for" })</td>
                    </tr>

                }
            </table>
        </div>
    }
    <button type="submit" class="btn btn-primary" style="margin-left:34px;">CreateUser</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
