@model string

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Role</title>
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" type="text/css" asp-href-include="~/CSS/*.css" />
</head>
<body>
    <div class="bg-primary m-1 p-1">
        <h4> Create Role </h4>
    </div>

    <div asp-validation-summary="All" class="text-danger">
    </div>
    <form asp-action="CreateRole" method="post">
        <div >
            <label style="margin-left:20px; text-align:right; margin-right:auto" for="name">Role Name</label>
            <input style="width:200px; margin-left:20px" name="name" class="form-control" />
        </div>
        <button type="submit" style="margin-top:20px; margin-left:25px" class="btn btn-primary">Create</button>
        <a style="margin-top:20px;" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
    </body>
