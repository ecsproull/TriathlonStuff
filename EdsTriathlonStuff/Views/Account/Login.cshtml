@model LoginViewModel


<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <table>
        <tr>
            <td><label asp-for="Email" style="margin-right:5px; font-size:28px; float:right"></label></td>
            <td><input asp-for="Email" class="text-box-wide" style="width:300px; font-size:28px; float:left" /></td>
        </tr>
        <tr>
            <td><label asp-for="Password" style="margin-right:5px; font-size:28px;"></label></td>
            <td><input asp-for="Password" class="text-box-wide" style="width:300px; font-size:28px;" /></td>
        </tr>
    </table>
    <div style="margin-top:20px;">
        <button class="btn btn-primary" style="margin-left:55px;font-size:28px" type="submit">Log In</button>
        <a style="font-size:28px; margin-left:20px;" href="CreateUser">Create Account</a>
    </div>
</form>
