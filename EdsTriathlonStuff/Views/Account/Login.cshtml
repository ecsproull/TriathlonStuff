@model LoginViewModel


<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group" style="margin-top:25px;">
        <label asp-for="Email" style="margin-left:55px; font-size:28px;"></label>
        <input asp-for="Email" class="text-box-wide" style="width:300px; font-size:28px;" />
    </div>

    <div class="form-group">
        <label asp-for="Password" style="font-size:28px;"></label>
        <input asp-for="Password" class="text-box-wide" style="width:300px; font-size:28px;" />
    </div>
    <button class="btn btn-primary" style="margin-left:55px;font-size:28px" type="submit">Log In</button>
    <a style="font-size:28px; margin-left:20px;" href="CreateUser">Create Account</a>
</form>
